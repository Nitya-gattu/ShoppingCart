<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/dp10"
    android:layout_marginTop="@dimen/dp8"
    android:layout_marginBottom="@dimen/dp8"
    android:layout_marginRight="@dimen/dp8"
    card_view:cardElevation="@dimen/dp8">

 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content" >


     <androidx.appcompat.widget.AppCompatImageView
         android:layout_width="@dimen/dp100"
         android:layout_height="@dimen/dp120"
         android:src="@drawable/realmenarzo50"
         android:id="@+id/productImage"
         card_view:ignore="MissingConstraints" />


     <TextView
         android:layout_width="180dp"
         android:layout_height="@dimen/sp30"
         android:text="title"
         android:id="@+id/productName"
         android:textSize="@dimen/sp20"
         android:textStyle="bold"
         android:layout_marginLeft="@dimen/dp8"
         app:layout_constraintStart_toEndOf="@+id/productImage"
         card_view:layout_constraintStart_toEndOf="@+id/productImage"
         card_view:ignore="MissingConstraints" />

     <TextView
         android:layout_width="180dp"
         android:layout_height="@dimen/sp30"
         android:text="unit price"
         android:id="@+id/unitPrice"
         android:textSize="@dimen/sp18"
         android:layout_marginLeft="@dimen/dp8"
         app:layout_constraintStart_toEndOf="@+id/productImage"
         app:layout_constraintTop_toBottomOf="@+id/productName"
         card_view:layout_constraintStart_toEndOf="@+id/productImage"
         card_view:ignore="MissingConstraints" />

     <TextView
         android:layout_width="180dp"
         android:layout_height="@dimen/sp30"
         android:text="title"
         android:id="@+id/quantity"
         android:textSize="@dimen/sp18"
         android:layout_marginLeft="@dimen/dp8"
         app:layout_constraintStart_toEndOf="@+id/productImage"
        app:layout_constraintTop_toBottomOf="@+id/unitPrice"
         card_view:layout_constraintStart_toEndOf="@+id/productImage"
         card_view:ignore="MissingConstraints" />

     <TextView
         android:layout_width="180dp"
         android:layout_height="@dimen/sp30"
         android:text="title"
         android:id="@+id/amount"
         android:textSize="@dimen/sp18"
         android:layout_marginLeft="@dimen/dp8"
         app:layout_constraintStart_toEndOf="@+id/productImage"
         card_view:layout_constraintStart_toEndOf="@+id/productImage"
         app:layout_constraintTop_toBottomOf="@+id/quantity"
         card_view:ignore="MissingConstraints" />



 </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>