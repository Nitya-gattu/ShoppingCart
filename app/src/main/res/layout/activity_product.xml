<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/dp10"
    android:layout_marginTop="@dimen/dp8"
    android:layout_marginBottom="@dimen/dp8"
    android:layout_marginRight="@dimen/dp8"
    card_view:cardElevation="@dimen/dp8"  >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/card"
    android:orientation="vertical" >

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp200"
        android:src="@drawable/realmenarzo50"
        android:id="@+id/productImage"
        tools:ignore="MissingConstraints" />


    <TextView
        android:layout_width="@dimen/dp200"
        android:layout_height="@dimen/sp30"
        android:text="title"
        android:id="@+id/productName"
        android:textSize="@dimen/sp18"
        android:layout_marginLeft="@dimen/dp8"
        card_view:layout_constraintStart_toEndOf="@+id/productImage"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="@dimen/dp200"
        android:layout_height="@dimen/sp30"
        android:text="price"
        android:id="@+id/productPrice"
        android:textSize="@dimen/sp18"
        android:textColor="@color/red"
        android:layout_marginLeft="@dimen/dp8"
        card_view:layout_constraintStart_toEndOf="@+id/productName"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="discription"
        android:id="@+id/productDiscription"
        android:textSize="@dimen/sp14"
        android:layout_marginLeft="@dimen/dp8"
        card_view:layout_constraintStart_toEndOf="@+id/productImage"
        card_view:layout_constraintTop_toBottomOf="@+id/productName"
        card_view:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="unit price"
        android:id="@+id/productunit"
        android:textSize="@dimen/sp18"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_marginTop="@dimen/dp8"
        card_view:layout_constraintStart_toEndOf="@+id/productImage"
        card_view:layout_constraintTop_toBottomOf="@+id/productDiscription"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="@dimen/dp100"
        android:layout_height="wrap_content"
        android:text="$ unit price"
        android:id="@+id/productunitPrice"
        android:textSize="@dimen/sp18"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_marginTop="@dimen/dp8"
        card_view:layout_constraintTop_toBottomOf="@+id/productunit"
        card_view:layout_constraintStart_toEndOf="@+id/productImage"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/sp30"
        android:layout_height="@dimen/sp30"
        android:src="@drawable/plusimage"
        android:id="@+id/productAdd"
        android:layout_marginTop="@dimen/dp10"
        card_view:layout_constraintStart_toEndOf="@+id/productQuantity"
        card_view:layout_constraintTop_toBottomOf="@+id/productDiscription" />

<androidx.appcompat.widget.AppCompatImageView
    android:layout_width="@dimen/sp30"
    android:layout_height="@dimen/sp30"
    android:layout_marginBottom="@dimen/dp10"
    android:layout_marginTop="@dimen/dp10"
    android:id="@+id/productSub"
    android:src="@drawable/minusimage"
    android:layout_marginLeft="@dimen/dp8"
    card_view:layout_constraintTop_toBottomOf="@+id/productDiscription"
    card_view:layout_constraintStart_toEndOf="@+id/productunit" />


    <TextView
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/sp30"
        android:text="price"
        android:id="@+id/productQuantity"
        android:textSize="@dimen/sp20"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp10"
        card_view:layout_constraintStart_toEndOf="@+id/productSub"
        card_view:layout_constraintTop_toBottomOf="@+id/productDiscription" />









</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>